{
    "name": "jetli",
    "version": "0.0.1",
    "description": "Dependency injector",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "typings": "dist/esm/index.d.ts",
    "scripts": {
        "// DEV SCRIPTS //": "-------------------------------------------------------",
        "watch": "npm-watch build",
        "build": "run-s -s clean build:esm build:cjs",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "// CODE QUALITY SCRIPTS //": "----------------------------------------------",
        "lint": "tslint -c tslint.json src/**/*.ts",
        "test": "jest --config jest-unit.config.json",
        "e2e": "jest --config jest-e2e.config.json",
        "test:watch": "jest --config jest-unit.config.json --watch",
        "test:coverage": "jest --config jest-unit.config.json --coverage",
        "// UTILS SCRIPTS //": "-----------------------------------------------------",
        "publish:coverage": "cat ./coverage/lcov.info | codacy-coverage",
        "publish:docs": "gh-pages --help",
        "docs": "run-s docs:readme docs:html",
        "docs:readme": "showdown makehtml -i README.md -a -o README.html && concat -o README.html ./src/docs-partials/readme_header.html README.html ./src/docs-partials/readme_footer.html",
        "docs:html": "typedoc --mode modules --exclude \"**/*+(index|.spec|.e2e).ts\" --tsconfig tsconfig.esm.json --hideGenerator --readme README.md --out docs/$npm_package_version src",
        "clean": "rimraf dist && rimraf docs && rimraf site && rimraf coverage && rimraf .cache"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "ignores": [
                "**/*.d.ts"
            ],
            "extensions": "ts",
            "quiet": false
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "24.0.13",
        "codacy-coverage": "3.4.0",
        "husky": "2.3.0",
        "jest": "24.7.1",
        "npm-run-all": "4.1.5",
        "npm-watch": "0.6.0",
        "rimraf": "2.6.3",
        "ts-jest": "24.0.2",
        "tslint": "5.16.0",
        "typedoc": "0.14.2",
        "typescript": "3.4.5",
        "concat": "1.0.3",
        "showdown": "1.9.0",
        "gh-pages": "2.0.1"
    },
    "engines": {
        "node": ">=6.11.5"
    },
    "author": "Filip Dabrowski",
    "repository": {
        "type": "git",
        "url": "git@github.com:thefill/jetli.git"
    },
    "license": "MIT"
}
