{
    "name": "jetli",
    "version": "0.0.1",
    "description": "Dependency injector",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "typings": "dist/esm/index.d.ts",
    "scripts": {
        "// DEV SCRIPTS //": "-------------------------------------------------------",
        "watch": "npm-watch build",
        "build": "run-s -s clean build:esm build:cjs",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "// CODE QUALITY SCRIPTS //": "----------------------------------------------",
        "lint": "tslint -c tslint.json src/**/*.ts",
        "test": "jest --config jest-unit.config.json",
        "e2e": "jest --config jest-e2e.config.json",
        "test:watch": "jest --config jest-unit.config.json --watch",
        "test:coverage": "jest --config jest-unit.config.json --coverage",
        "// UTILS SCRIPTS //": "-----------------------------------------------------",
        "publish:coverage": "cat ./coverage/lcov.info | codacy-coverage",
        "publish:docs": "gh-pages --help",
        "docs": "run-s docs:base-readme docs:markdown-readme docs:api-readme docs:html docs:postprocess",
        "docs:base-readme": "concat -o BASE-README.md src/docs-partials/readme.header.md src/docs-partials/readme.badges.md src/docs-partials/readme.body.md",
        "docs:markdown-readme": "concat -o README.md BASE-README.md src/docs-partials/readme.markdown-documentation.md",
        "docs:api-readme": "concat -o API-README.md BASE-README.md src/docs-partials/readme.api-documentation.md",
        "docs:html": "typedoc --mode modules --exclude \"**/*+(index|.spec|.e2e).ts\" --tsconfig tsconfig.esm.json --hideGenerator --readme API-README.md --out docs/$npm_package_version src",
        "docs:postprocess": "sed $'/<\/head>>/{e cat src/docs-partials/api-docs.styles.html}' docs/$npm_package_version/index.html && sed $'/</body>>/{e cat src/docs-partials/api-docs.script.html}' docs/$npm_package_version/index.html && cp docs/$npm_package_version/* docs/*",
        "clean": "rimraf dist && rimraf docs && rimraf site && rimraf coverage && rimraf .cache && rimraf BASE-README.md && rimraf API-README.md"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "ignores": [
                "**/*.d.ts"
            ],
            "extensions": "ts",
            "quiet": false
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "24.0.13",
        "codacy-coverage": "3.4.0",
        "husky": "2.3.0",
        "jest": "24.7.1",
        "npm-run-all": "4.1.5",
        "npm-watch": "0.6.0",
        "rimraf": "2.6.3",
        "ts-jest": "24.0.2",
        "tslint": "5.16.0",
        "typedoc": "0.14.2",
        "typescript": "3.4.5",
        "concat": "1.0.3",
        "showdown": "1.9.0",
        "gh-pages": "2.0.1"
    },
    "engines": {
        "node": ">=6.11.5"
    },
    "author": "Filip Dabrowski",
    "repository": {
        "type": "git",
        "url": "git@github.com:thefill/jetli.git"
    },
    "license": "MIT"
}
